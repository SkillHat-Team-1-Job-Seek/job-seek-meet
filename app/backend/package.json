  },
  "homepage": "https://github.com/SkillHat-Team-1-Job-Seek/job-seek-meet/tree/main#readme",
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "email-validator": "^2.0.4",
